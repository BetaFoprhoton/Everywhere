<ResourceDictionary
  xmlns="https://github.com/avaloniaui" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:m="clr-namespace:Everywhere.Models" xmlns:md="clr-namespace:LiveMarkdown.Avalonia;assembly=LiveMarkdown.Avalonia">
  <DataTemplate
    x:Key="{x:Type m:ModelProvider}"
    x:DataType="m:ModelProvider">
    <StackPanel
      Margin="4" Orientation="Horizontal"
      Spacing="8">
      <Image
        Width="20" Height="20"
        md:AsyncImageLoader.Source="{Binding IconUrl.ActualValue, FallbackValue={x:Null}}"/>

      <TextBlock
        VerticalAlignment="Center"
        Text="{Binding DisplayName.ActualValue, FallbackValue={x:Null}}"/>
    </StackPanel>
  </DataTemplate>

  <DataTemplate
    x:Key="{x:Type m:ModelDefinition}"
    x:DataType="m:ModelDefinition">
    <TextBlock Text="{Binding DisplayName, FallbackValue={x:Null}}"/>
  </DataTemplate>

  <DataTemplate
    x:Key="{x:Type m:WebSearchEngineProvider}"
    x:DataType="m:WebSearchEngineProvider">
    <TextBlock Text="{Binding Id, FallbackValue={x:Null}}"/>
  </DataTemplate>
</ResourceDictionary>
